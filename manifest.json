{
  "manifest_version": 2,
  "name": "__MSG_name__",
  "short_name": "TOtL",
  "version": "3.3.0.0",
  "description": "__MSG_description__",
  "author": "Stefan vd",
  "homepage_url": "https://www.turnoffthelights.com",
  "icons": { "16": "icons/icon16.png",
             "32": "icons/icon32.png",
             "48": "icons/icon48.png",
             "128": "icons/icon128.png"
           },
  "default_locale": "en",
  "browser_action": {
      "default_title": "__MSG_pageatitle__",
	    "default_icon": {
        "19": "icons/iconstick1.png",
        "38": "icons/iconstick38.png"
      }
  },
  "background": {
    "page": "background.html",
	  "persistent": false
  },
  "content_security_policy": "script-src 'self' https://ssl.google-analytics.com https://platform.twitter.com https://apis.google.com; img-src *; object-src 'self'",
  "web_accessible_resources": [
    "images/minimize_on.png",
    "images/minimize.png",
    "icons/icon16.png",
    "icons/icon16@2x.png",
	  "js/injected.js",
	  "images/theater.jpg",
	  "images/Smoke10.png",
    "images/cloud.png",
    "js/fpsinject.js"
  ],
  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*"],
      "css" : ["css/light.css"],
      "js": ["js/content.js"],
      "run_at": "document_end"
    },
    {
      "matches": ["*://*.youtube.com/*"],
      "js": [ "js/fps.js"],
      "run_at": "document_start",
      "all_frames": true
    },
    {
      "matches": ["*://*.youtube.com/*"], 
      "css" : ["css/youtube.css"]
    }
  ],
  "commands": {
    "_execute_page_action": {
      "suggested_key": {
        "default": "Ctrl+Shift+L",
        "mac": "MacCtrl+Shift+L"
      }
    },
    "toggle-feature-nightmode": {
            "suggested_key": {
              "default": "Ctrl+Shift+N",
              "mac": "MacCtrl+Shift+N"
            },
            "description": "__MSG_titelnighttheme__"
          }
  },
  "options_ui": {
    "page": "options.html",
    "open_in_tab": true
  },
  "minimum_chrome_version": "33",
  "permissions": [ "contextMenus", "notifications", "tabs", "storage", "<all_urls>" ]
}